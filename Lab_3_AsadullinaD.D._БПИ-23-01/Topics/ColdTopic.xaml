
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#66B2FF" Offset="0"/>
        <GradientStop Color="#0066CC" Offset="0.5"/>
        <GradientStop Color="#66B2FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PanelBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#001F3F" Offset="0"/>
        <GradientStop Color="#004080" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TextColor" Color="White"/>
    <SolidColorBrush x:Key="BorderColor" Color="#66B2FF"/>
    <SolidColorBrush x:Key="ResultTextColor" Color="#66FF66"/>


    <Style x:Key="FormulaRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="8,5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="#002244"/>
        <Setter Property="BorderBrush" Value="#66B2FF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border"
                        CornerRadius="3"
                        BorderThickness="1"
                        BorderBrush="#66B2FF"
                        Background="#002244"
                        Padding="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Кастомная "точка выбора" -->
                            <Grid Width="14" Height="14" Margin="0,0,5,0">
                                <!-- Внешний круг -->
                                <Ellipse x:Name="outerCircle"
                                     Stroke="#66B2FF"
                                     StrokeThickness="1.5"
                                     Fill="Transparent"/>

                                <!-- Внутренняя точка -->
                                <Ellipse x:Name="innerDot"
                                     Width="8"
                                     Height="8"
                                     Fill="Transparent"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                            </Grid>

                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 🟩 При выборе -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#007ACC"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            <Setter TargetName="outerCircle" Property="Stroke" Value="White"/>
                            <Setter TargetName="innerDot" Property="Fill" Value="White"/>
                        </Trigger>

                        <!-- 🟦 При потере выбора -->
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#002244"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#66B2FF"/>
                            <Setter TargetName="outerCircle" Property="Stroke" Value="#66B2FF"/>
                            <Setter TargetName="innerDot" Property="Fill" Value="Transparent"/>
                        </Trigger>

                        <!-- 🚫 При наведении — ничего не меняется -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#88DDFF"/>
                            <Setter TargetName="outerCircle" Property="Stroke" Value="#88DDFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FormulaImageStyle" TargetType="Image">
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ParametersGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#66B2FF"/>
        <Setter Property="Background" Value="#002244"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="ParameterLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>


    <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#004C99" Offset="0"/>
                    <GradientStop Color="#003366" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#66B2FF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ParameterComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="Green"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#004C99" Offset="0"/>
                    <GradientStop Color="#003366" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#66B2FF"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

 
    <Style x:Key="CalculateButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#66B2FF"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#007ACC" Offset="0"/>
                    <GradientStop Color="#005A9E" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0088DD" Offset="0"/>
                            <GradientStop Color="#0066BB" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="#88DDFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="ThemeButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="Теплая тема"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#66B2FF"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#007ACC" Offset="0"/>
                    <GradientStop Color="#005A9E" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0088DD" Offset="0"/>
                            <GradientStop Color="#0066BB" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="#88DDFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ResultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#66FF66"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="#001F3F"/>
        <Setter Property="Margin" Value="10"/>
    </Style>


</ResourceDictionary>