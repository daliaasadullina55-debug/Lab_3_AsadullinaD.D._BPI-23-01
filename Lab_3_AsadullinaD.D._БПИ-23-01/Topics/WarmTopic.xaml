
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFB347" Offset="0"/>
        <GradientStop Color="#FF8C00" Offset="0.5"/>
        <GradientStop Color="#FFCC33" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PanelBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CC6600" Offset="0"/>
        <GradientStop Color="#FF9933" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TextColor" Color="White"/>
    <SolidColorBrush x:Key="BorderColor" Color="#FF6600"/>
    <SolidColorBrush x:Key="ResultTextColor" Color="#FFFF66"/>


    <Style x:Key="FormulaRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="8,5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="#663300"/>
        <Setter Property="BorderBrush" Value="#FF8800"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border"
                        CornerRadius="3"
                        BorderThickness="1"
                        BorderBrush="#FF8800"
                        Background="#663300"
                        Padding="5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Радио-круг -->
                            <Grid Width="14" Height="14" Margin="0,0,5,0">
                                <!-- Внешний круг -->
                                <Ellipse x:Name="outerCircle"
                                     Stroke="#FF8800"
                                     StrokeThickness="1.5"
                                     Fill="Transparent"/>
                                <!-- Внутренняя точка -->
                                <Ellipse x:Name="innerDot"
                                     Width="8"
                                     Height="8"
                                     Fill="Transparent"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 🔸 При выборе -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF9900"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                            <Setter TargetName="outerCircle" Property="Stroke" Value="White"/>
                            <Setter TargetName="innerDot" Property="Fill" Value="White"/>
                        </Trigger>

                        <!-- 🔹 При потере выбора -->
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#663300"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF8800"/>
                            <Setter TargetName="outerCircle" Property="Stroke" Value="#FF8800"/>
                            <Setter TargetName="innerDot" Property="Fill" Value="Transparent"/>
                        </Trigger>

                        <!-- ✨ При наведении — просто светлее фон и рамка -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#996633"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFAA33"/>
                            <Setter TargetName="outerCircle" Property="Stroke" Value="#FFAA33"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="FormulaImageStyle" TargetType="Image">
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ParametersGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#FF6600"/>
        <Setter Property="Background" Value="#994C00"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="ParameterLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF9933" Offset="0"/>
                    <GradientStop Color="#CC6600" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF6600"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ParameterComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="Green"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF9933" Offset="0"/>
                    <GradientStop Color="#CC6600" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#FF6600"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="CalculateButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#FF6600"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF9900" Offset="0"/>
                    <GradientStop Color="#CC6600" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FFAA00" Offset="0"/>
                            <GradientStop Color="#DD7700" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="#FF8800"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ThemeButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="Холодная тема"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#FF6600"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF9900" Offset="0"/>
                    <GradientStop Color="#CC6600" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FFAA00" Offset="0"/>
                            <GradientStop Color="#DD7700" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="#FF8800"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ResultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FFFF66"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="#CC6600"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

</ResourceDictionary>