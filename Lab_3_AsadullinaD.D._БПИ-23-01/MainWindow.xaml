<Window x:Class="Lab_3_AsadullinaD.D._БПИ_23_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1000" Width="500">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="{DynamicResource WindowBackground}">

            <RadioButton IsChecked="True" Margin="5" Name="Radio1" Style="{DynamicResource FormulaRadioButtonStyle}">
                <WrapPanel>
                    <Image Source="{Binding Image1}" Height="35" Width="300" Style="{DynamicResource FormulaImageStyle}"/>
                    <GroupBox Style="{DynamicResource ParametersGroupBoxStyle}" Header="Parameters">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="a" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R1TextA" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="f" Grid.Column="0" Grid.Row="1"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="1" Name="R1ComboF" SelectedIndex="0"
                                      ItemsSource="{Binding Listf1}"/>
                        </Grid>
                    </GroupBox>
                </WrapPanel>
            </RadioButton>

            <RadioButton Margin="5" Name="Radio2" Style="{DynamicResource FormulaRadioButtonStyle}">
                <WrapPanel>
                    <Image Source="{Binding Image2}" Height="35" Width="300" Style="{DynamicResource FormulaImageStyle}"/>
                    <GroupBox Style="{DynamicResource ParametersGroupBoxStyle}" Header="Parameters">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="a" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R2TextA" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="b" Grid.Column="0" Grid.Row="1"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R2TextB" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="f" Grid.Column="0" Grid.Row="2"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="2" Name="R2ComboF" SelectedIndex="0"
                                  ItemsSource="{Binding Listf2}"/>
                        </Grid>
                    </GroupBox>
                </WrapPanel>
            </RadioButton>

            <RadioButton Margin="5" Name="Radio3" Style="{DynamicResource FormulaRadioButtonStyle}">
                <WrapPanel>
                    <Image Source="{Binding Image3}" Height="35" Width="300" Style="{DynamicResource FormulaImageStyle}"/>
                    <GroupBox Style="{DynamicResource ParametersGroupBoxStyle}" Header="Parameters">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="a" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R3TextA" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="b" Grid.Column="0" Grid.Row="1"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R3TextB" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="c" Grid.Column="0" Grid.Row="2"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="2" Name="R3ComboC" SelectedIndex="0"
                                  ItemsSource="{Binding Listc1}"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="d" Grid.Column="0" Grid.Row="3"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="3" Name="R3ComboD" SelectedIndex="0"
                                  ItemsSource="{Binding Listd}"/>
                        </Grid>
                    </GroupBox>
                </WrapPanel>
            </RadioButton>

            <RadioButton Margin="5" Name="Radio4" Style="{DynamicResource FormulaRadioButtonStyle}">
                <WrapPanel>
                    <Image Source="{Binding Image4}" Height="50" Width="300" Style="{DynamicResource FormulaImageStyle}"/>
                    <GroupBox Style="{DynamicResource ParametersGroupBoxStyle}" Header="Parameters">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="d" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R4TextD" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="a" Grid.Column="0" Grid.Row="1"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="0,00" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R4TextA" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="c" Grid.Column="0" Grid.Row="2"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="2" Name="R4ComboC" SelectedIndex="0"
                                  ItemsSource="{Binding Listc2}"/>
                        </Grid>
                    </GroupBox>
                </WrapPanel>
            </RadioButton>

            <RadioButton Margin="5" Name="Radio5" Style="{DynamicResource FormulaRadioButtonStyle}">
                <WrapPanel>
                    <Image Source="{Binding Image5}" Height="50" Width="300" Style="{DynamicResource FormulaImageStyle}"/>
                    <GroupBox Style="{DynamicResource ParametersGroupBoxStyle}" Header="Parameters">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="x" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="1,0" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R5TextX" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="y" Grid.Column="0" Grid.Row="1"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="1,0" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R5TextY" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="N" Grid.Column="0" Grid.Row="2"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="2" Name="R5ComboN" SelectedIndex="0"
                                  ItemsSource="{Binding ListN}"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="K" Grid.Column="0" Grid.Row="3"/>
                            <ComboBox Style="{DynamicResource ParameterComboBoxStyle}" Grid.Column="1" Grid.Row="3" Name="R5ComboK" SelectedIndex="0"
                                  ItemsSource="{Binding ListK}"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="t" Grid.Column="0" Grid.Row="4"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="1,0" Grid.Column="1" Grid.Row="4" MinWidth="70" Name="R5TextT" PreviewTextInput="NumberValidationTextBox"/>

                            <Label Style="{DynamicResource ParameterLabelStyle}" Content="j" Grid.Column="0" Grid.Row="5"/>
                            <TextBox Style="{DynamicResource InputTextBoxStyle}" Text="1,0" Grid.Column="1" Grid.Row="5" MinWidth="70" Name="R5TextJ" PreviewTextInput="NumberValidationTextBox"/>
                        </Grid>
                    </GroupBox>
                </WrapPanel>
            </RadioButton>

            <Button Style="{DynamicResource CalculateButtonStyle}" Content="Считать"
                Width="100" Margin="10" HorizontalAlignment="Center"
                Click="Button_Click"/>

            <Button x:Name="ThemeButton" 
                Style="{DynamicResource ThemeButtonStyle}"
                Click="TopicButton_Click"/>

            <TextBlock Style="{DynamicResource ResultTextBlockStyle}" 
                   Text="{Binding Result}" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Window>

